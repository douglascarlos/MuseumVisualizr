<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="douglas_carlos.museu.feevale.br.museumvisualizr" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_museum"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KioskActivity"
            android:label="@string/title_activity_kiosk" >
        </activity>
        <activity
            android:name=".SyncedActivity"
            android:label="@string/title_activity_synced" >
        </activity>
        <activity
            android:name=".TextSearchActivity"
            android:label="@string/title_activity_text_search" >
        </activity>
    </application>

</manifest>
